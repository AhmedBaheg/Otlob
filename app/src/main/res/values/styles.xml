<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Customize TextInputLayout -->

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>

    </style>

    <!-- Customize HintAppearance -->

    <style name="HintAppearance" parent="TextAppearance.Design.Hint">

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <!-- Customize ErrorAppearance -->

    <style name="ErrorAppearance" parent="TextAppearance.Design.Error">

        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>

    </style>

</resources>