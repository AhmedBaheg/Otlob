<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Customize Drawer Bar Theme-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!--Customize Icon Drawer Bar Color-->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Customize TextInputLayout -->

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>

    </style>

    <!-- Customize HintAppearance -->

    <style name="HintAppearance" parent="TextAppearance.Design.Hint">

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>

    </style>

    <!-- Customize ErrorAppearance -->

    <style name="ErrorAppearance" parent="TextAppearance.Design.Error">

        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#931a25</item>

    </style>

    <!--Customize Item Drawer Color-->
    <style name="ThemeOverlay.AppCompat.navTheme" parent="ThemeOverlay.AppCompat.Light">

        <!-- Color of text and icon when SELECTED -->
        <!--        <sub_item_order name="colorPrimary">@android:color/white</sub_item_order>-->

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Theme Mode  -->
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/Switch</item>
    </style>

</resources>